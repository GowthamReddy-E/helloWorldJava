pipeline {
    agent any

    environment {
        // Specify the Maven installation directory
        MAVEN_HOME = '/Users/gowe/Downloads/apache-maven-3.5.0'
        // Update the PATH to include Maven binary directory
        PATH = "${MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clean') {
            steps {
                // Execute clean using Maven executable
                sh "${MAVEN_HOME}/bin/mvn clean"
            }
        }

        stage('Test') {
            steps {
                // Execute test using Maven executable
                sh "${MAVEN_HOME}/bin/mvn test"
            }
        }

        stage('Install') {
            steps {
                // Execute install using Maven executable
                sh "${MAVEN_HOME}/bin/mvn install"
            }
        }

        stage('Publish HTML Reports') {
            steps {
                // Publish HTML reports
                publishHTML(allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: './target/surefire-reports/', reportFiles: 'index.html', reportName: 'HelloWorld HTML Report')
            }
        }

        stage('Transfer Artifacts to FTP Server') {
            steps {
                script {
                    // Use sshagent to execute SSH commands
                    sshagent(credentials: ['AgentOneServer'], ignoreMissing: true) {
                        sh '''
                            ssh -o StrictHostKeyChecking=no root@192.168.17.130 &&
                            scp -o StrictHostKeyChecking=no ./target/helloworldjava-1.4-SNAPSHOT.jar root@192.168.17.130:/home/
                        '''
                    }
                }
            }
        }
    }
}
