pipeline {
    agent any

    environment {
        MAVEN_HOME = '/path/to/your/maven/apache-maven-3.9.6' // Specify the Maven installation directory
        PATH = "${MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clean') {
            steps {
                // Run 'mvn clean'
                sh 'mvn clean'
            }
        }

        stage('Test') {
            steps {
                // Run 'mvn test'
                sh 'mvn test'
            }
        }

        stage('Install') {
            steps {
                // Run 'mvn install'
                sh 'mvn install'
            }
        }

        stage('Publish HTML Reports') {
            steps {
                // Publish HTML reports
                publishHTML(allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: './target/surefire-reports/', reportFiles: 'index.html', reportName: 'HelloWorld HTML Report')
            }
        }

        stage('Transfer Artifacts to FTP Server') {
            steps {
                // Transfer artifacts to FTP server
                script {
                    sh 'mvn deploy'
                }
            }
        }
    }
}
