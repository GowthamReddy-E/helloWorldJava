pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                // Run 'mvn clean' using specified Maven installation
                script {
                    tool 'maven_3_9_6'
                    sh 'mvn clean'
                }
            }
        }

        stage('Test') {
            steps {
                // Run 'mvn test' using specified Maven installation
                script {
                    tool 'maven_3_9_6'
                    sh 'mvn test'
                }
            }
        }

        stage('Install') {
            steps {
                // Run 'mvn install' using specified Maven installation
                script {
                    tool 'maven_3_9_6'
                    sh 'mvn install'
                }
            }
        }

        stage('Publish HTML Reports') {
            steps {
                // Publish HTML reports
                publishHTML(allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: './target/surefire-reports/', reportFiles: 'index.html', reportName: 'HelloWorld HTML Report')
            }
        }

        stage('Transfer Artifacts to FTP Server') {
            steps {
                // Transfer artifacts to FTP server
                script {
                    tool 'maven_3_9_6'
                    sh 'mvn deploy'
                }
            }
        }
    }
}

